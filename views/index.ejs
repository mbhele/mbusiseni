    <script>
document.addEventListener('scroll', function() {
    const scrollPosition = window.pageYOffset || document.documentElement.scrollTop;

    // Move 'text-1' (Web building) to the left and 'text-2' (Marketing) to the right based on the scroll position
    document.getElementById('text-1').style.transform = `translateX(${-scrollPosition}px)`;
    document.getElementById('text-2').style.transform = `translateX(${scrollPosition}px)`;
});

document.body.classList.add('page-loaded');
var customersButton = document.getElementById('needCustomersButton');
    var websiteButton = document.getElementById('wantWebsiteButton');
var button = document.querySelector('.select-button');
  const opacityInterval = setInterval(() => {
            const massiveDiv = document.querySelector('.massive-div');
            if (massiveDiv) {
                let currentOpacity = parseFloat(getComputedStyle(massiveDiv).opacity);
                currentOpacity -= 0.1; // You can adjust the decrement value
                massiveDiv.style.opacity = Math.max(0, currentOpacity).toString();

                // Check if opacity has reached zero and remove the element
                if (currentOpacity <= 0) {
                    clearInterval(opacityInterval); // Stop the interval
                    massiveDiv.remove(); // Remove the element
                }
            }
        }, 1000);
    
        // Add smooth scrolling to anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });


        
        // Get the element with the ID 'web'
        var webElement = document.getElementById('web');

        // Get the content of the element
        var content = webElement.textContent;

        // Wrap the first letter in a span with a specific style
        var styledContent = '<span style="color: #14AE5C;">' + content.charAt(0) + '</span>' + content.slice(1);

        // Set the modified content back to the element
        webElement.innerHTML = styledContent;

        function selectService(service) {
    var whatsappNumber = '+27712542404';
    var serviceName = '';
    var serviceDetails = '';

    // Determine the service name and details based on the selected service
    switch(service) {
        case 'basic':
            serviceName = 'Basic Package';
            serviceDetails = '✓ Small 3 page simple design website\n' +
                            '✓ Functional website\n' +
