    <script>
        function redirectToHome() {
            window.location.href = "/";
        }

        document.addEventListener('scroll', function() {
            const scrollPosition = window.pageYOffset || document.documentElement.scrollTop;

            document.getElementById('text-1').style.transform = `translateX(${-scrollPosition}px)`;
            document.getElementById('text-2').style.transform = `translateX(${scrollPosition}px)`;
        });

        document.body.classList.add('page-loaded');
        
        var customersButton = document.getElementById('needCustomersButton');
        var websiteButton = document.getElementById('wantWebsiteButton');
        var button = document.querySelector('.select-button');
        
        const opacityInterval = setInterval(() => {
            const massiveDiv = document.querySelector('.massive-div');
            if (massiveDiv) {
                let currentOpacity = parseFloat(getComputedStyle(massiveDiv).opacity);
                currentOpacity -= 0.1;
                massiveDiv.style.opacity = Math.max(0, currentOpacity).toString();

                if (currentOpacity <= 0) {
                    clearInterval(opacityInterval);
                    massiveDiv.remove();
                }
            }
        }, 1000);

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

