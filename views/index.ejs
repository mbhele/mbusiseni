        webElement.innerHTML = styledContent;

        function selectService(service) {
            var whatsappNumber = '+27712542404';
            var serviceName = '';
            var serviceDetails = '';

            switch(service) {
                case 'basic':
                    serviceName = 'Basic Package';
                    serviceDetails = '✓ Small 3 page simple design website\n' +
                                    '✓ Functional website\n' +
                                    '✓ 3 pages\n' +
                                    '✓ 1 revision\n' +
                                    '✓ 7 days delivery\n' +
                                    'R 7,452';
                    break;
                case 'free-one-page':
                    serviceName = 'Free One-Page Website';
                    serviceDetails = '✓ One-page website design\n' +
                                    '✓ Limited customization\n' +
                                    'FREE';
                    break;
                case 'standard':
                    serviceName = 'Standard Package';
                    serviceDetails = '✓ Medium 6 page standard website\n' +
                                    '✓ Content upload\n' +
                                    '✓ 6 pages\n' +
                                    '✓ 2 revisions\n' +
                                    '✓ 1 day delivery\n' +
                                    'R 16,393';
                    break;
                case 'premium':
                    serviceName = 'Premium Package';
                    serviceDetails = '✓ High-quality website + CMS\n' +
                                    '✓ 8 pages\n' +
                                    '✓ 3 revisions\n' +
                                    '✓ 1 day delivery\n' +
                                    'R 29,806';
                    break;
                case 'seo':
                    serviceName = 'SEO Package';
                    serviceDetails = '✓ On-page and off-page optimization\n' +
                                    '✓ Keyword research\n' +
                                    '✓ SEO audit\n' +
                                    '✓ Monthly performance reports\n' +
                                    'Contact us for a quote';
                    break;
                case 'facebook-management':
                    serviceName = 'Facebook Management';
                    serviceDetails = '✓ Social media strategy development\n' +
                                    '✓ Content creation and posting\n' +
                                    '✓ Engagement monitoring\n' +
                                    'Contact us for a quote';
                    break;
                case 'facebook-ads':
                    serviceName = 'Facebook Ads';
                    serviceDetails = '✓ Ad campaign setup and management\n' +
                                    '✓ Target audience research\n' +
                                    '✓ Ad performance analytics\n' +
                                    'Contact us for a quote';
                    break;
                default:
            }

            var message = "Hello, I'm interested in the " + serviceName + " service.\n\n";
            message += "Service Details:\n" + serviceDetails + "\n\n";
            message += "Please provide more information.\n";

            var encodedMessage = encodeURIComponent(message);
            var whatsappLink = 'https://wa.me/' + whatsappNumber + '?text=' + encodedMessage;
            window.location.href = whatsappLink;
        }

